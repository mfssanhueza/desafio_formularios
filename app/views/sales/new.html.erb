<h1>Sales#new</h1>
<p>Find me in app/views/sales/new.html.erb</p>
<%= form_with model: Sale.new, local: true  do |form|%>
<div class="form-group row">
  <%= form.label :detail, class: 'col-sm-2 col-form-label' %>
  <%= form.text_area :detail, placeholder: 'Detalle de venta' %>
</div>
<div class="form-group row">
  <%= form.label :category, class: 'col-sm-2 col-form-label' %>
  <%= form.number_field :category, id: :sale_category %>
</div>
<div class="form-group row">
  <%= form.label :value, class: 'col-sm-2 col-form-label' %>
  <%= form.number_field :value, id: :sale_value %>
</div>
<div class="form-group row">
  <%= form.label :discount, class: 'col-sm-2 col-form-label' %>
  <%= form.number_field :discount, min: 0, max: 100, id: :sale_discount %>
</div>
<div class="form-group row">
  <div class="col-sm-2">IVA</div>
  <%= form.check_box :tax, id: :sale_tax %>
  <%= form.label :tax, 'Excento de Iva', class: 'form-check-label' %>
</div>
<%= form.submit 'Enviar', class: 'btn btn-success' %>

<% end %>
